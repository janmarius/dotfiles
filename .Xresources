! xrdb .Xresources

URxvt*font: xft:Inconsolata Nerd Font Mono:pixelsize=20:minspace=False, xft:DejaVu Sans:pixelsize=25
URxvt*boldFont: xft:Inconsolata Nerd Font Mono:pixelsize=20:minspace=False, xft:DejaVu Sans:pixelsize=25
URxvt*letterSpace: -1
!URxvt.font: xft:monospace:size=12
URxvt.scrollBar: false

! Transparency
!URxvt.transparent: true
!URxvt.shading: 5

! Background color
URxvt*background: black

! Font color
URxvt*foreground: white

! Other colors
URxvt*color0: black
URxvt*color1: red3
URxvt*color2: green3
URxvt*color3: yellow3
URxvt*color4: blue2
URxvt*color5: magenta3
URxvt*color6: cyan3
URxvt*color7: gray90
URxvt*color8: grey50
URxvt*color9: red
URxvt*color10: green
URxvt*color11: yellow
URxvt*color12: blue
URxvt*color13: magenta
URxvt*color14: cyan
URxvt*color15: white

! Cursor color
URxvt*cursorColor: magenta

! Resize font with keybindings
URxvt.perl-ext-common: resize-font, keyboard-select
URxvt.resize-font.smaller: C-j
URxvt.resize-font.bigger: C-k
URxvt.keysym.M-Escape: perl:keyboard-select:activate
