! xrdb .Xresources
! URxvt*font: xft:DejaVu Sans Mono:size=12
! URxvt*font: xft:Inconsolata Nerd Font Mono:pixelsize=20:minspace=False, xft:DejaVu Sans:pixelsize=25
! URxvt*boldFont: xft:Inconsolata Nerd Font Mono:pixelsize=20:minspace=False, xft:DejaVu Sans:pixelsize=25
!URxvt*allow_bold:           false

#define fonts xft:DejaVu Sans Mono for Powerline:regular:size=15, \
	      xft:Inconsolata Nerd Font Mono:pixelsize=20:minspace=False, \
	      xft:DejaVu Sans:pixelsize=25


URxvt*font:                 fonts 
URxvt*imFont:               fonts 
URxvt*boldFont:             fonts 
URxvt*italicFont:           fonts 
URxvt*boldItalicFont:       fonts 


URxvt*letterSpace: -1
!URxvt.font: xft:monospace:size=12
URxvt.scrollBar: false

! Transparency
!URxvt.transparent: true
!URxvt.shading: 5

! Background color
!URxvt*background: black
URxvt*background: #1C1F22

! Font color
URxvt*foreground: white

! Other colors
! Power Bar (Background): 
URxvt*color0: #000000

URxvt*color1: red3

! Power Bar (Git - Ok): Light Green
URxvt*color2: #55FF55

! Power Bar (Git - Dirty working directory): Yellow
URxvt*color3: yellow3

! Power Bar (Directory): 
URxvt*color4: #3781BF

URxvt*color5: magenta3

URxvt*color6: cyan3

URxvt*color7: gray90

URxvt*color8: grey50

URxvt*color9: red

URxvt*color10: green

URxvt*color11: yellow


! Directories: Light Blue
URxvt*color12: #5555FF

! Pictures: Light Magenta
URxvt*color13: #FF55FF

! Symbolic Links: Light Cyan
URxvt*color14: #55FFFF

URxvt*color15: magenta




! Cursor color
URxvt*cursorColor: white

! Resize font with keybindings
URxvt.perl-ext-common: resize-font, keyboard-select
URxvt.resize-font.smaller: C-j
URxvt.resize-font.bigger: C-k
URxvt.keysym.M-Escape: perl:keyboard-select:activate
